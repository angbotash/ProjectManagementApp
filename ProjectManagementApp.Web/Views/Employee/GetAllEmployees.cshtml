@model List<ProjectManagementApp.Web.ViewModels.EmployeeViewModel>

<h2>Employees<a class="btn btn-outline-dark" asp-controller="Employee" asp-action="CreateEmployee" style="float: right">Create a new employee</a></h2>

@if (Model.Any())
{
    <div>
        <table class="table">
            <thead>
            <tr>
                <th>
                    First name
                </th>
                <th>
                    Last name
                </th>
                <th>
                    Patronymic
                </th>
                <th>
                    Email
                </th>
            </tr>
            </thead>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>
                        @employee.FirstName
                    </td>
                    <td>
                        @employee.LastName
                    </td>
                    @if (employee.Patronymic is null)
                    {
                        <td>
                        </td>
                    }
                    else
                    {
                        <td>
                            @employee.Patronymic
                        </td>
                    }
                    <td>
                        @Html.ActionLink(
                            employee.Email,
                            "ViewEmployee",
                            "Employee",
                            new { id = @employee.Id },
                            null)
                    </td>
                </tr>
            }
        </table>
    </div>
}
else
{
    <h6>There is no employees.</h6>
}
