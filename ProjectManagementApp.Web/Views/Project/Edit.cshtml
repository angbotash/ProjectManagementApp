@model ProjectManagementApp.Web.ViewModels.EditProjectViewModel

<form asp-action="Edit" asp-controller="Project" asp-route-id="@Model.Id" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="container">
        <h1>Edit project "@Model.Name"</h1>
        <hr>
        <div>
            <label asp-for="Name"><b>Project name</b></label>
            <br />
            <input type="text" asp-for="Name" placeholder="Enter project name" required>
            <span asp-validation-for="Name"></span>
        </div>

        <div>
            <label asp-for="ClientCompanyName"><b>Client company</b></label>
            <br />
            <input type="text" asp-for="ClientCompanyName" placeholder="Enter client company name" required>
            <span asp-validation-for="ClientCompanyName"></span>
        </div>

        <div>
            <label asp-for="ExecutorCompanyName"><b>Executor company</b></label>
            <br />
            <input type="text" asp-for="ExecutorCompanyName" placeholder="Enter executor company name">
        </div>

        <div>
            <label asp-for="StartDate"><b>Start date</b></label>
            <br />
            <input type="date" asp-for="StartDate" placeholder="Enter start date" required>
            <span asp-validation-for="StartDate"></span>
        </div>

        <div>
            <label asp-for="EndDate"><b>End date</b></label>
            <br />
            <input type="date" asp-for="EndDate" placeholder="Enter end date" required>
            <span asp-validation-for="EndDate"></span>
        </div>

        <div>
            <label asp-for="Priority"><b>Priority</b></label>
            <br />
            <input type="number" asp-for="Priority" placeholder="Enter priority 1-10" min="1" max="10" required>
            <span asp-validation-for="Priority"></span>
        </div>
        <hr>

        <button type="submit">Save</button>
    </div>
</form>