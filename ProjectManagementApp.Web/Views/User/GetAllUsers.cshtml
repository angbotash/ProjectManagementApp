@model IList<ProjectManagementApp.Web.ViewModels.UserViewModel>

<h2>Users<a class="btn btn-outline-dark" asp-controller="User" asp-action="CreateUser" style="float: right">Create a new employee</a></h2>

@if (Model.Any())
{
    <div>
        <table class="table">
            <thead>
            <tr>
                <th>
                    First name
                </th>
                <th>
                    Last name
                </th>
                <th>
                    Patronymic
                </th>
                <th>
                    Email
                </th>
            </tr>
            </thead>
            @foreach (var user in Model)
            {
                <tr>
                    <td>
                        @user.FirstName
                    </td>
                    <td>
                        @user.LastName
                    </td>
                    @if (user.Patronymic is null)
                    {
                        <td>
                        </td>
                    }
                    else
                    {
                        <td>
                            @user.Patronymic
                        </td>
                    }
                    <td>
                        @Html.ActionLink(
                            user.Email,
                            "ViewUser",
                            "User",
                            new { id = user.Id },
                            null)
                    </td>
                </tr>
            }
        </table>
    </div>
}
else
{
    <h6>There is no employees.</h6>
}
